generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  username   String   @unique
  password   String
  role       Role     @default(USER)
  reputation Int      @default(0)
  createdAt  DateTime @default(now())
}

enum Role {
  USER
  EXPERT
  ADMIN
}
